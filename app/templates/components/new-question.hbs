{{yield}}
{{#if addNewQuestion}}
<h1>New Questions</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"placeholder="Enter your name"}}
      </div>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" placeholder="Type in your question"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="content"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
